{
  "name": "@detachhead/ts-helpers",
  "version": "10.0.0",
  "files": [
    "dist",
    "src",
    "!src/**/__tests__"
  ],
  "scripts": {
    "test": "tsc jest.config.ts && jest --detectOpenHandles --config jest.config.js",
    "lint:check": "eslint . --ext .ts",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "build-and-lib-check": "npm run build && tsc -p tsconfig.lib-check.json",
    "check": "npm run build-and-lib-check && npm run lint:check && npm run format:check && npm run test"
  },
  "keywords": [],
  "author": "detachhead",
  "license": "ISC",
  "description": "various typescript helper functions and utility types",
  "repository": {
    "type": "git",
    "url": "https://github.com/DetachHead/ts-helpers.git"
  },
  "dependencies": {
    "@types/lodash": "4.14.167",
    "date-fns": "2.21.1",
    "is-ci": "2.0.0",
    "lodash": "4.17.20",
    "ordinal": "1.0.3",
    "throw-expression": "1.0.2",
    "ts-is-present": "1.2.1",
    "ts-toolbelt": "9.6.0",
    "tsdef": "0.0.14",
    "utility-types": "3.10.0"
  },
  "devDependencies": {
    "@detachhead/eslint-config": "^0.0.11",
    "@jest/types": "^27.2.5",
    "@types/is-ci": "3.0.0",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.20",
    "@types/power-assert": "1.5.3",
    "babel-preset-power-assert": "3.0.0",
    "espower-typescript": "9.0.2",
    "jest": "^27.5.1",
    "power-assert": "1.6.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.19",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.3.0",
    "typed-nodejs-assert": "1.1.0",
    "typescript": "^4.7.0-beta"
  }
}
